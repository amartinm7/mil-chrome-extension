{
  "short_name": "ma-companion-extension",
  "name": "ma-companion-extension",
  "description": "milanuncios chrome extension",
  "version": "1.0.0",
  "manifest_version": 2,
  "icons": {
    "16": "icons/icon_16.png",
    "48": "icons/icon_48.png",
    "128": "icons/icon_128.png"
  },
  "browser_action": {
    "default_title": "ma-companion-extension",
    "default_popup": "popup/popup.html"
  },
  "background": {
    "scripts": [
      "background.js"
    ]
  },
  "permissions": [
    "cookies",
    "https://www.milanuncios.com/*",
    "https://*/",
    "storage"
  ],
  "content_security_policy": "script-src 'self' 'unsafe-eval' 'popup.js' 'strict-dynamicâ€™; object-src 'self' 'unsafe-eval'"
}

